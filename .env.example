# ===========================================
# CLIMA ROUTE ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env and update with your values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# For Local Docker DB (Default)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=climaroute
DB_HOST=db
DB_PORT=5432

# For External DB (e.g., Neon DB, AWS RDS)
# If DATABASE_URL is set, it will override the individual settings above.
# Neon Example: Host=ep-cool-darkness-123456.us-east-2.aws.neon.tech;Database=neondb;Username=alex;Password=password;SSL Mode=Require
DATABASE_URL=

# ===========================================
# BACKEND API CONFIGURATION
# ===========================================
# ASP.NET Core Environment (Development, Production, Staging)
ASPNETCORE_ENVIRONMENT=Production

# Backend port
BACKEND_PORT=5000

# Host URL (where your backend is accessible from)
HOST_URL=http://localhost:5000

# CORS Origins (comma-separated list of allowed origins)
ALLOWED_ORIGINS=http://localhost:80,http://localhost,http://localhost:3000

# ===========================================
# AI SERVICE CONFIGURATION
# ===========================================
# AI Service Port
AI_SERVICE_PORT=5001

# AI Service URL (internal docker network)
AI_SERVICE_URL=http://ai-service:5001

# Model paths (inside container)
MODEL_PATH=/app/rainfall_model.keras
SCALER_PATH=/app/scaler.gz

# Flask Environment
FLASK_ENV=production
FLASK_DEBUG=0

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================
# Frontend port
FRONTEND_PORT=80

# API URL for frontend build (can be /api for nginx proxy or full URL)
VITE_API_URL=/api

# Gemini API Key for AI features (optional)
GEMINI_API_KEY=your_gemini_api_key_here

# ===========================================
# DATABASE ADMIN INTERFACE (Development only)
# ===========================================
# Adminer port (database GUI tool)
ADMINER_PORT=8080

# ===========================================
# DEPLOYMENT CONFIGURATION
# ===========================================
# Server public IP or domain (used by start.sh script)
SERVER_URL=http://localhost

# Docker compose project name
COMPOSE_PROJECT_NAME=climaroute

# ===========================================
# RESOURCE LIMITS
# ===========================================
# AI Service memory limit
AI_SERVICE_MEMORY_LIMIT=2G

# Backend memory limit
BACKEND_MEMORY_LIMIT=1G

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
# Log level (Trace, Debug, Information, Warning, Error, Critical, None)
LOG_LEVEL=Information
ASPNETCORE_LOG_LEVEL=Warning

# Frontend log level (DEBUG, INFO, WARN, ERROR, FATAL)
REACT_APP_LOG_LEVEL=ERROR

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# JWT Secret (generate a secure random string)
JWT_SECRET=your_jwt_secret_key_here

# Session timeout (in minutes)
SESSION_TIMEOUT=60

# ===========================================
# EXTERNAL SERVICES
# ===========================================
# Weather API (Open-Meteo is free, no key needed by default)
WEATHER_API_URL=https://api.open-meteo.com/v1/forecast

# ===========================================
# HEALTH CHECK CONFIGURATION
# ===========================================
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3
